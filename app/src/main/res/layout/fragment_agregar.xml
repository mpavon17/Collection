<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:orientation="vertical"
    tools:context=".Agregar">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anonymous_pro_bold"
        android:includeFontPadding="false"
        android:paddingLeft="5dp"
        android:text="SELECT THE COOLLECTION"
        android:textAlignment="textStart"
        android:textColor="#227E8F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_linear_layout2"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/discos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#E4E3E3"
                android:fontFamily="sans-serif"
                android:onClick="discos"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:shadowColor="#0E0D0D"
                android:text="Vinyl"
                android:textColor="#0B0909"
                android:textSize="12sp"
                app:cornerRadius="5dp"
                app:icon="@drawable/vinilo"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:iconTint="#090909"
                app:strokeColor="#FDFCFC"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/camisetas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#E4E3E3"
                android:fontFamily="sans-serif"
                android:onClick="discos"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:text="Soccer"
                android:textColor="#0B0909"
                android:textSize="12sp"
                app:cornerRadius="5dp"
                app:icon="@drawable/jersey"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:iconTint="#050505"
                app:strokeColor="#FDFCFC"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/movie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#E4E3E3"
                android:fontFamily="sans-serif"
                android:onClick="discos"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:text="Movie"
                android:textColor="#0B0909"
                android:textSize="12sp"
                app:cornerRadius="5dp"
                app:icon="@drawable/entradascine"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:iconTint="#040303"
                app:strokeColor="#FDFCFC"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/libros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E4E3E3"
                android:fontFamily="sans-serif"
                android:onClick="discos"
                android:paddingLeft="13dp"
                android:paddingRight="5dp"
                android:text="Books"
                android:textColor="#0B0909"
                android:textSize="12sp"
                app:cornerRadius="5dp"
                app:icon="@drawable/libros"
                app:iconPadding="0dp"
                app:iconSize="36dp"
                app:iconTint="#050505"
                app:strokeColor="#FDFCFC"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E4E3E3"
                android:fontFamily="sans-serif"
                android:onClick="discos"
                android:text="Custom"
                android:textColor="#0B0909"
                android:textSize="14sp"
                app:cornerRadius="5dp"
                app:icon="@drawable/add"
                app:iconSize="36dp"
                app:iconTint="#040303"
                app:strokeColor="#FDFCFC"
                app:strokeWidth="1dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:text="Fill the fields of the selected Collection"
            android:textAlignment="center"
            android:textColor="#227E8F"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/frameMostrarDinamico"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
